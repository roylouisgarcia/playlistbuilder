<div id="songs">
<% if user_signed_in? %>

<table class="table table-light table-striped table-bordered">
<thead class="thead-dark">
<tr>
  <th scope="col">Title
  </th>
  <th scope="col">Artist</th>
  <th scope="col"></th>
  <th scope="col"></th>
</tr>

</thead>

<tbody>
 <% @songs.each do |song| %>
<% if song.user == current_user %>
  <tr>
    <th scope="row"><%= link_to song.title, song %></th>
    <td><%= song.artist %></td>
    <td><%= link_to "Youtube", song.youtubevideo, class: "btn btn-danger btn-sm", target: "_blank" %></td>
    <td><%= link_to "Lyrics", song.lyrics, class: "btn btn-warning btn-sm", target: "_blank" %></td>
  </tr> 
  <% end %>
  <% end %>
</tbody>

</table>
<%= link_to "New song", new_song_path, class: "btn btn-primary" %>
<% else %>
<div class="card">
  <h1 class="card-header">Playlist Builder</h1>
  <div class="card-body">
  
  
<p>Music taste may be subjective but we can discover good music from one another. This app is created for Users who wants to curate their song playlists. This app is created using Ruby on Rails. </p> <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %> </div>
</div>

<% end %>

</div>




